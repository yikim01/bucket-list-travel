<% provide(:title, "Log In") %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>
      <h2>Log In</h2>
      <p class="text-right">New user? <%= link_to "Sign up now!", signup_path %></p>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div><!-- Username box -->
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div><!-- password box -->
        <div class="form-group">
          <%= f.submit "Log In", class: "btn btn-primary btn-block btn-md col-xs-4 col-md-4" %>
        </div><!-- login button -->
    </div><!-- position of form -->
    <% end %>
  </div> <!-- row -->
</div><!-- container -->

